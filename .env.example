# =================================
# Environment Variables Template
# =================================
# Bu dosyayı .env olarak kopyalayın ve değerleri doldurun.
# .env dosyası git'e commit edilmemelidir.

# =================================
# API Configuration
# =================================
# Backend API base URL
VITE_API_URL=/api

# =================================
# App Configuration
# =================================
# Uygulama adı (title, meta tags vb. için)
VITE_APP_NAME=Portal Template

# Uygulama versiyonu
VITE_APP_VERSION=1.0.0

# =================================
# Feature Flags (Optional)
# =================================
# Mock data kullanımı (development için)
VITE_ENABLE_MOCK=true

# Debug mode
VITE_DEBUG=false
